<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.anyarusova.lab.servlet.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/ControllerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DataServlet</servlet-name>
        <servlet-class>com.anyarusova.lab.servlet.DataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataServlet</servlet-name>
        <url-pattern>/DataServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>com.anyarusova.lab.servlet.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/AreaCheckServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClearServlet</servlet-name>
        <servlet-class>com.anyarusova.lab.servlet.ClearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearServlet</servlet-name>
        <url-pattern>/ClearServlet</url-pattern>
    </servlet-mapping>
</web-app>